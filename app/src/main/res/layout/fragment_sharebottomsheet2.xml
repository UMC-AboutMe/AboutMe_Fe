<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/bottomsheet_background">

        <ImageButton
            android:id="@+id/shareBottomSheet2_instargram_btn"
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/insta2"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gmarketsansmedium"
            android:text="인스타그램\n    공유"
            app:layout_constraintEnd_toEndOf="@+id/shareBottomSheet2_instargram_btn"
            app:layout_constraintStart_toStartOf="@+id/shareBottomSheet2_instargram_btn"
            app:layout_constraintTop_toBottomOf="@+id/shareBottomSheet2_kakao_btn" />

        <ImageButton
            android:id="@+id/shareBottomSheet2_kakao_btn"
            android:layout_width="77dp"
            android:layout_height="70dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/kakao2"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toEndOf="@+id/shareBottomSheet2_instargram_btn"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/gmarketsansmedium"
            android:text="카카오톡\n   공유"
            app:layout_constraintEnd_toEndOf="@+id/shareBottomSheet2_kakao_btn"
            app:layout_constraintTop_toBottomOf="@+id/shareBottomSheet2_kakao_btn" />

        <ImageButton
            android:id="@+id/shareBottomSheet2_image_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/imageshare2"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toEndOf="@+id/shareBottomSheet2_kakao_btn"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gmarketsansmedium"
            android:text="이미지\n  저장"
            app:layout_constraintEnd_toEndOf="@+id/shareBottomSheet2_image_btn"
            app:layout_constraintStart_toStartOf="@+id/shareBottomSheet2_image_btn"
            app:layout_constraintTop_toBottomOf="@+id/shareBottomSheet2_kakao_btn" />

        <ImageButton
            android:id="@+id/numberPaste_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/serialpaste2"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toEndOf="@+id/shareBottomSheet2_image_btn"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gmarketsansmedium"
            android:text="일련번호\n   복사"
            app:layout_constraintEnd_toEndOf="@+id/numberPaste_btn"
            app:layout_constraintStart_toStartOf="@+id/numberPaste_btn"
            app:layout_constraintTop_toBottomOf="@+id/shareBottomSheet2_kakao_btn" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/gmarketsansmedium"
            android:text="공유하기"
            android:textSize="29sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>