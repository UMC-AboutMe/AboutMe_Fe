<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottomsheet_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gmarketsansmedium"
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="150dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            android:text="공유하기"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp">

            <ImageButton
                android:id="@+id/shareBottomSheet2_instargram_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/myprofile_instargram"/>

            <ImageButton
                android:id="@+id/shareBottomSheet2_kakao_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/login_kakao"/>

            <ImageButton
                android:id="@+id/shareBottomSheet2_image_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/myprofile_image"/>

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/myprofile_paste"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="180dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인스타그램\n    공유"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/gmarketsansmedium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카카오톡\n   공유"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/gmarketsansmedium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이미지\n  저장"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/gmarketsansmedium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일련번호\n   복사"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/gmarketsansmedium"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>