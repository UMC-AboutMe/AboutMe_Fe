<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/profile1_iv"
        android:layout_width="101dp"
        android:layout_height="192dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="1dp"
        android:adjustViewBounds="true"
        android:src="@drawable/myprofile_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/profileName_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/gmarketsansmedium"
        android:text="프로필1"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/profile1_iv"
        app:layout_constraintEnd_toEndOf="@+id/profile1_iv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@+id/profile1_iv" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/profstore_bg"
        app:civ_border_color="@color/transparent"
        app:civ_border_width="0dp"
        app:layout_constraintEnd_toEndOf="@+id/profile1_iv"
        app:layout_constraintStart_toStartOf="@+id/profile1_iv"
        app:layout_constraintTop_toTopOf="@+id/profile1_iv" />

    <ImageView
        android:id="@+id/prof_fav"
        android:layout_width="20dp"
        android:layout_height="27dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="18dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/profile1_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profstorage_star" />

    <ImageView
        android:id="@+id/prof_basic"
        android:layout_width="20dp"
        android:layout_height="27dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="17dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="@+id/profile1_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profstorage_favbasic" />

    <ImageView
        android:id="@+id/prof_logo"
        android:layout_width="30dp"
        android:layout_height="10dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="@+id/profile1_iv"
        app:layout_constraintStart_toStartOf="@+id/profile1_iv"
        app:layout_constraintTop_toBottomOf="@+id/avatar_iv"
        app:srcCompat="@drawable/aboutme_pink" />


</androidx.constraintlayout.widget.ConstraintLayout>
