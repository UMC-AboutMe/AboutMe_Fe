<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_agit"
        android:layout_width="200dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/agit_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:src="@drawable/agit_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/space_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/agit_thumbnail_room_1"
            app:layout_constraintTop_toTopOf="@+id/agit_box"
            app:layout_constraintBottom_toBottomOf="@+id/agit_box"
            app:layout_constraintStart_toStartOf="@+id/agit_box"
            app:layout_constraintEnd_toEndOf="@+id/agit_box"/>

        <ImageView
            android:id="@+id/avatar_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/agit_thumbnail_avatar_1"
            app:layout_constraintTop_toTopOf="@+id/space_iv"
            app:layout_constraintBottom_toBottomOf="@+id/space_iv"
            app:layout_constraintStart_toStartOf="@+id/space_iv"
            app:layout_constraintEnd_toEndOf="@+id/space_iv" />

        <ImageView
            android:id="@+id/feeling_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/agit_thumbnail_feeling"
            app:layout_constraintBottom_toTopOf="@+id/avatar_iv"
            app:layout_constraintStart_toStartOf="@+id/space_iv"
            app:layout_constraintEnd_toEndOf="@+id/space_iv" />

        <ImageView
            android:id="@+id/comment_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@+id/feeling_iv"
            app:layout_constraintEnd_toStartOf="@+id/feeling_iv"
            android:src="@drawable/agit_thumbnail_comment" />

        <ImageView
            android:id="@+id/schedule_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            app:layout_constraintBottom_toTopOf="@+id/comment_iv"
            app:layout_constraintEnd_toStartOf="@+id/comment_iv"
            android:src="@drawable/agit_thumbnail_schedule" />

        <ImageView
            android:id="@+id/music_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            app:layout_constraintBottom_toTopOf="@+id/avatar_iv"
            app:layout_constraintStart_toEndOf="@+id/feeling_iv"
            android:src="@drawable/agit_thumbnail_music" />

        <ImageView
            android:id="@+id/photo_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="@id/story_iv"
            app:layout_constraintBottom_toTopOf="@id/story_iv"
            android:src="@drawable/agit_thumbnail_photo" />

        <ImageView
            android:id="@+id/story_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toEndOf="@+id/avatar_iv"
            app:layout_constraintTop_toTopOf="@+id/avatar_iv"
            android:src="@drawable/agit_thumbnail_story" />

        <TextView
            android:id="@+id/spaceName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="148dp"
            android:fontFamily="@font/gmarketsansmedium"
            android:text="@string/agit_spacename"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/agit_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/agit_unbookmarked"
            app:layout_constraintTop_toTopOf="@+id/agit_box"
            app:layout_constraintStart_toEndOf="@+id/space_iv"
            android:onClick="onClick"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>