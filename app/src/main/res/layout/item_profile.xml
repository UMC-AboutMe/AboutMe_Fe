<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/select_imageView"
        android:layout_width="59dp"
        android:layout_height="112dp"
        android:background="@color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/storage_front" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/select_profile_iv"
        android:layout_width="28dp"
        android:layout_height="29dp"
        android:layout_marginTop="22dp"
        android:src="@drawable/profstore_bg"
        app:civ_border_color="@color/transparent"
        app:civ_border_width="0dp"
        app:layout_constraintEnd_toEndOf="@+id/select_imageView"
        app:layout_constraintStart_toStartOf="@+id/select_imageView"
        app:layout_constraintTop_toTopOf="@+id/select_imageView" />

    <TextView
        android:id="@+id/select_profile_name_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/transparent"
        android:ems="12"
        android:fontFamily="@font/gmarketsansmedium"
        android:hint="NAME"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="3sp"
        app:layout_constraintEnd_toEndOf="@+id/select_imageView"
        app:layout_constraintStart_toStartOf="@+id/select_imageView"
        app:layout_constraintTop_toBottomOf="@+id/select_profile_iv" />

    <TextView
        android:id="@+id/select_profile_num_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/transparent"
        android:ems="12"
        android:fontFamily="@font/gmarketsansmedium"
        android:hint="PHONE NUMBER"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="3sp"
        app:layout_constraintEnd_toEndOf="@+id/select_imageView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@+id/select_imageView"
        app:layout_constraintTop_toBottomOf="@+id/select_profile_name_et" />

    <CheckBox
        android:id="@+id/select_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:button="@drawable/selector_checkbox"
        android:buttonTint="@drawable/selector_checkbox"
        android:fontFamily="@font/gmarketsansmedium"
        android:text="CheckBox"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
