<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/myprofile_bg">


        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/myprofile_bg">


        <ImageButton
            android:id="@+id/turn_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/myprofile_turn"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="90dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="270dp" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_iv"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="130dp"
                android:foregroundGravity="center"
                android:src="@drawable/frontprofile_basic"
                app:civ_border_color="@color/transparent"
                app:civ_border_width="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/profile_name_et"
                    android:layout_width="202dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="370dp"
                    android:fontFamily="@font/gmarketsansmedium"
                    android:textSize="29sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/profile_num_et"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="420dp"
                    android:layout_marginLeft="-240dp"
                    android:fontFamily="@font/gmarketsansmedium"
                    android:textSize="23sp" />

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="200dp"
                        android:layout_marginLeft="-200dp"
                        android:src="@drawable/myprofile_logo" />


            </LinearLayout>

        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>