<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="379dp"
        android:layout_height="670dp"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/proff_1bg" />

    <ImageButton
        android:id="@+id/turn_btn"
        android:layout_width="26dp"
        android:layout_height="31dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="62dp"
        android:background="@drawable/prof_re"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_iv"
        android:layout_width="193dp"
        android:layout_height="201dp"
        android:layout_marginTop="124dp"
        android:src="@drawable/frontprofile"
        app:civ_border_color="@color/transparent"
        app:civ_border_width="0dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />


    <TextView
        android:id="@+id/profile_name_et"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="55dp"
        android:background="@color/transparent"
        android:ems="12"
        android:fontFamily="@font/gmarketsansmedium"
        android:text=" "
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/profile_iv" />

    <TextView
        android:id="@+id/profile_num_et"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@color/transparent"
        android:ems="12"
        android:fontFamily="@font/gmarketsansmedium"
        android:text=" "
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/profile_name_et" />


</androidx.constraintlayout.widget.ConstraintLayout>
