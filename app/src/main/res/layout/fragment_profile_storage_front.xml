<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/myprofile_bg"
        xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageButton
        android:id="@+id/turn_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/myprofile_turn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:civ_border_width="0dp"
                app:civ_border_color="@color/transparent"
                android:src="@drawable/frontprofile_basic"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="130dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="90dp"/>

                <EditText
                    android:id="@+id/profile_name_et"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="24dp"
                    android:textSize="20sp"
                    android:ems="12"
                    android:background="@color/transparent"
                    android:hint="NAME"
                    android:fontFamily="@font/gmarketsansmedium"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="350dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="160dp"/>


                <EditText
                    android:id="@+id/profile_num_et"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="24dp"
                    android:ems="12"
                    android:hint="PHONE NUMBER"
                    android:fontFamily="@font/gmarketsansmedium"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="410dp"
                    android:background="@color/transparent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="120dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="530dp"
        android:src="@drawable/myprofile_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
