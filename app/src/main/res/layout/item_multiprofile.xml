<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/myprofile_bg"/>

        <ImageButton
            android:id="@+id/defaultNoProfile_btn"
            android:layout_width="50dp"
            android:layout_height="90dp"
            android:background="@drawable/nodefault"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="300dp" />


        <ImageButton
            android:id="@+id/defaultProfile_btn"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:background="@drawable/defaultyes"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="300dp"
            android:visibility="invisible"/>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">-

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/multiProfile_char_iv"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:civ_border_width="0dp"
                app:civ_border_color="@color/transparent"
                android:src="@drawable/frontprofile_basic"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="130dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="90dp"/>


            <TextView
                android:id="@+id/multiProfile_Name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정서연"
                android:fontFamily="@font/gmarketsansmedium"
                android:textSize="25sp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="160dp"/>

            <TextView
                android:id="@+id/multiProfile_Number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="010-1234-5678"
                android:fontFamily="@font/gmarketsansbold"
                android:textSize="15sp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="140dp"/>

        </LinearLayout>


        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/myprofile_logo"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="530dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="110dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>